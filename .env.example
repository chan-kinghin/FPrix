# Database
DATABASE_URL=postgresql+psycopg2://postgres:postgres@127.0.0.1:6543/costchecker

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Admin auth
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me

# CORS (JSON array)
CORS_ORIGINS=["*"]

# WeChat Work (企业微信) Integration
# Get these from WeChat Work Admin Console (管理后台 -> 应用管理 -> 自建应用)

# 企业ID (required for all WeChat Work API calls)
WEWORK_CORP_ID=your_corp_id_here

# 应用AgentId (Application ID from your custom app)
WEWORK_AGENT_ID=1000001

# 应用Secret (for active API calls - message sending, user info, etc.)
WEWORK_SECRET=your_app_secret_here

# Callback Configuration (from 接收消息 -> 设置API接收)
# Token: Random string for signature verification (you generate this)
WEWORK_TOKEN=your_random_token_here

# EncodingAESKey: 43-character key for message encryption (auto-generated or custom)
WEWORK_ENCODING_AES_KEY=your_43_character_aes_key_here

# Callback URL (your FastAPI server endpoint - must be HTTPS in production)
# Example: https://yourdomain.com/wework/callback
# Local dev: Use ngrok or similar for HTTPS tunnel
WEWORK_CALLBACK_URL=https://yourdomain.com/wework/callback
